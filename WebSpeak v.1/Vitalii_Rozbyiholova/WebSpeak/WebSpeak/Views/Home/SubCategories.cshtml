@model IEnumerable<DAL.Models.Categories>
@using DAL.Models

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Categories item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Words", "Home", new { id = item.Id })
                </td>
                <td>
                    <img src="../../@item.Picture" width="300" height="300" />
                </td>
            </tr>
        }
    </tbody>
</table>
