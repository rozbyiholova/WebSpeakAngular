@model List<DTO> 
@using DAL.Models;
@{
    ViewData["Title"] = "Test1";
    var Data = Html.Raw(Json.Serialize(Model.ToArray()));
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/Tests.js"></script>

<div class="test container">
    <div class="test_images row">

    </div>
    <div class="test_word"></div>
</div>

<style>
    

    .test_word {
        font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size: 2em;
        display: flex;
        justify-content: center;
    }

    .confirm {
        border-radius: 5px;
        text-align: center;
        background-color: #57a957;
        border-color: #57a957;
        color: #fff;
        text-transform: uppercase;
        border: 1px solid;
        font: bold 13px arial, helvetica, sans-serif;
    }

    .img-fluid {
        object-fit: cover;
        height: 20vw;
        cursor: pointer;
    }
</style>

<script type="text/javascript">
    $(document).ready(() => {
        InitNewTest(@Data, 2, 1, 0);
        NextTest();
    })

    function returnData() {
        return @Html.Raw(Json.Serialize(Model.ToArray()));
    }
</script>